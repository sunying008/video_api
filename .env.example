# YouTube视频API服务环境配置
# 复制此文件为.env并根据需要修改配置

# API服务配置
VIDEO_API_APP_NAME=YouTube Video Analysis API
VIDEO_API_APP_VERSION=1.0.0
VIDEO_API_DEBUG=false
VIDEO_API_HOST=0.0.0.0
VIDEO_API_PORT=8000

# YouTube分析配置
VIDEO_API_WHISPER_MODEL=base
VIDEO_API_PREFERRED_LANGUAGES=["zh", "en", "zh-CN", "en-US"]
VIDEO_API_MAX_VIDEO_DURATION=3600

# 文件存储配置
VIDEO_API_TEMP_DIR=
VIDEO_API_KEEP_TEMP_FILES=false

# 日志配置
VIDEO_API_LOG_LEVEL=INFO
VIDEO_API_LOG_FILE=

# API限制
VIDEO_API_MAX_CONCURRENT_REQUESTS=10
VIDEO_API_REQUEST_TIMEOUT=300